<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/bg_corner"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                style="@style/Text.Label.Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Các tùy chọn quét"
                android:textColor="#2C3D7A" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_scan_cccd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_semibold"
                android:paddingVertical="12dp"
                android:text="Quét CCCD"
                android:textSize="16dp"
                app:backgroundTint="#2C3D7A"
                app:cornerRadius="10dp"
                app:icon="@drawable/ic_user"
                app:iconSize="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_scan_template"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_semibold"
                android:paddingVertical="12dp"
                android:text="Quét mẫu có sẵn"
                android:textSize="16dp"
                app:backgroundTint="#2C3D7A"
                app:cornerRadius="10dp"
                app:icon="@drawable/ic_documents"
                app:iconSize="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_scan_without_template"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_semibold"
                android:paddingVertical="12dp"
                android:text="Quét mẫu mới"
                android:textSize="16dp"
                app:backgroundTint="#2C3D7A"
                app:cornerRadius="10dp"
                app:icon="@drawable/ic_document_text"
                app:iconSize="24dp" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_scan_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_semibold"
                android:paddingVertical="12dp"
                android:text="Quét dạng bảng"
                android:textSize="16dp"
                app:backgroundTint="#2C3D7A"
                app:cornerRadius="10dp"
                app:icon="@drawable/ic_clipboard"
                app:iconSize="24dp" />


        </androidx.appcompat.widget.LinearLayoutCompat>
    </FrameLayout>

</layout>